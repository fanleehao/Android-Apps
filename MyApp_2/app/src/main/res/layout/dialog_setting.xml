<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg7"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#c26b05"
            android:text="音乐"
            android:layout_weight="1"/>
        <SeekBar
            android:id="@+id/sb_dialog_setting_music"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <Button
            android:id="@+id/bt_dialog_setting_music"
            android:layout_width="51dp"
            android:layout_height="28dp"
            android:background="@drawable/buttonk"
            android:text="静音"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#c26b05"
            android:text="音效"/>
        <SeekBar
            android:id="@+id/sb_dialog_setting_sound"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
        <Button
            android:id="@+id/bt_dialog_setting_sound"
            android:layout_width="49dp"
            android:layout_height="28dp"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/buttonk"
            android:text="静音"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#c26b05"
            android:text="         当前用户:"/>
        <TextView
            android:id="@+id/tv_dialog_setting_user"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#c26b05"
            android:text="未登录"
            android:gravity="center"/>
        <Button
            android:id="@+id/bt_dialog_setting_user"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/buttonk"
            android:text="切换用户" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_dialog_setting_confirm"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/buttonk"
        android:text="确定"/>

</LinearLayout>